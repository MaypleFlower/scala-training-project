# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET           /get/:id           controllers.TodoListController.getTodoList(id: java.util.UUID)

GET           /getAll            controllers.TodoListController.getAllTodoLists()

POST          /create            controllers.TodoListController.createTodoList()

POST          /update/:id        controllers.TodoListController.updateTodoList(id: java.util.UUID)

DELETE        /deleteAll         controllers.TodoListController.deleteAllTodoLists()

DELETE        /delete/:id        controllers.TodoListController.deleteTodoList(id: java.util.UUID)